{
  "name": "route-event",
  "version": "7.0.2",
  "type": "module",
  "description": "Simple client side route event",
  "files": [
    "./dist/*"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "build-tests": "esbuild test/index.ts --format=esm --target=ES2022 --bundle --keep-names > test/test-bundle.js",
    "build-cjs": "esbuild src/*.ts --format=cjs --tsconfig=tsconfig.build.json --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json && npm run copy",
    "copy": "cp ./src/index.css ./dist",
    "test": "npm run build-tests && cat test/index.html | tape-run --input=html --static=test | tap-spec",
    "start": "vite",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@substrate-system/catch-links": "^0.2.10",
    "@substrate-system/single-page": "^2.0.1"
  },
  "devDependencies": {
    "@substrate-system/dom": "^0.1.7",
    "@substrate-system/tapzero": "^0.10.15",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "markdown-toc": "^1.2.0",
    "tap-spec": "^5.0.0",
    "tape-run": "^11.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.3.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css": {
      "import": "./dist/index.css"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "keywords": [
    "browser",
    "client-side",
    "client",
    "route",
    "router",
    "url",
    "event"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/route-event.git"
  },
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE"
}
